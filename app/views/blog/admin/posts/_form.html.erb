<%= f.input :title, :input_html => { :class => "span12" } %>
<%= f.input :slug, :hint => " (It'll be generated automatically.)", :input_html => { :class => "span12", :disabled => true } %>
<%= f.input :author_id, :as => :select, :collection => @users.map { |user| [user.nickname, user.id] }, :include_blank => false, :selected => f.object.new_record? ? current_blog_user.id : f.object.author_id %>
<%= f.input :sidebar_id, :as => :select, :collection => Blog::Sidebar.all.map { |sidebar| [sidebar.name, sidebar.id] }, :include_blank => false %>

<%= f.input :content, :input_html => { :id => "content-editor", :data => { :broswe => admin_ckeditor_index_path, :upload => admin_ckeditor_index_path(:user_id => current_blog_user.id) } } %>
<%= f.input :excerpt, :input_html => { :id => "excerpt-editor", :data => { :broswe => admin_ckeditor_index_path, :upload => admin_ckeditor_index_path(:user_id => current_blog_user.id) } } %>

<%= f.input :meta_description, :input_html => { :class => "span12" } %>
<%= f.input :meta_keywords, :input_html => { :class => "span12" } %>
<%= f.input :post_tags, :label => "Tags", :hint => "( ex: \"Resume Template, Resume Example, Resume\", seperate tags by \",\" )", :input_html => { :class => "span12", :value => f.object.tags.map { |tag| tag.name }.join(", ") } %>
<%= f.input :is_published, :label => "Published?", :as => :select, :include_blank => false %>
<%= f.input :published_at, :label => "Published at", :include_blank => false %>