<div class="row">
  <div class="span12">
    <section>
      <div class="page-header">
        <h1>Create New Post</h1>
      </div>
    </section>

    <%= simple_form_for @post, :url => blog.admin_posts_path(@post), :method => "post" do |f| %>
      <%= render "form", :f => f %>

      <div class="form-actions">
        <%= f.submit "Create Post", :class => "btn btn-primary" %>
        <%= link_to "Cancel", blog.admin_posts_path, :class => "btn" %>
      </div>
    <% end %>
  </div>
</div>