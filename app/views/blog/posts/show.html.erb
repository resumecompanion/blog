<div id="main">
  <div id="post">
    <h1><%= @post.title %></h1>
    <div class="details">
      <span class="posted-at">Posted on <%= l(@post.published_at.to_date, :format => :short) %></span>
      <span class="author">By <%= @post.author.nickname if @post.author.present? %>.</span>
    <%= render "social_buttons", :post => @post %>
    </div>

    <div class="content">
      <%=raw @post.content %>
    </div>

    <a class="free-resume-builder-banner" href="http://resumecompanion.com" title="Free Resume Builder">Free Resume Builder</a>

    <div class="more-information">
      <div>Tags: <%=raw @post.tags.map { |tag| link_to tag.name, blog.tag_path(tag) }.join(", ") %></div>
    </div>

    <%= render "social_buttons", :post => @post %>
    <%= render "disqus", :disqus_shortname => @disqus_shortname %>
  </div>
</div>

<div id="sidebar">
  <%=raw @post.sidebar.try(:content) %>
  <%= render "blog/shared/recent_posts" %>
</div>
